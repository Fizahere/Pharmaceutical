@model List<Blending>

@{
    ViewData["Title"] = "Blendings";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .offcanvas-end{
        width: 45rem!important; 
    }

   /*  .drawer-head{
        background-color: #0e0c28;
        color:white;
    } */
</style>

<div class="p-4">
    <div class="d-flex justify-content-between">
        <h1>Blendings</h1>
        <button class="btn btn-primary mb-4" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"><a href="#" class="text-light">+ Add Product</a></button>
    </div>
    @* table *@
    <div class="row">
        
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Products </h5>
       </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Model</th>
                                    <th>Capacity</th>
                                    <th>TypeOfBlending</th>
                                    <th>MixingSpeed</th>
                                    <th>MixingTime</th>
                                    <th>Image</th>
                                    <th>Weight</th>
                                    <th>length</th>
                                    <th>Width</th>
                                    <th>Height</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var blendingItem in Model)
                                {
                         <tr>
                                        <td>@blendingItem.BlendingID</td>
                                        <td>@blendingItem.Name</td>
                                        <td>@blendingItem.Model</td>
                                        <td>@blendingItem.Capacity q</td>
                                        <td>@blendingItem.TypeOfBlending</td>
                                        <td>@blendingItem.MixingSpeed m/s</td>
                                        <td>@blendingItem.MixingTime ms</td>
                                        <td><img src="~/images/@blendingItem.BlendingImage" height="100" width="100" /></td>
                                        <td>@blendingItem.Weight kg</td>
                                        <td>@blendingItem.length m</td>
                                        <td>@blendingItem.Width m</td>
                                        <td>@blendingItem.Height ft</td>
                                        <td><button class="btn btn-primary"><a class="text-light" asp-route-id="@blendingItem.BlendingID" asp-controller="Blendings" asp-action="EditBlending">Edit</a></button></td>
                                        <td> <button class="btn btn-danger" onclick="confirmDelete('@blendingItem.BlendingID')">Delete</button></td>
                                    </tr>
                               }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* add Drawer*@
    <div class="offcanvas offcanvas-end" tabindex="-2" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header drawer-head text-light">
            <h5 id="offcanvasRightLabel">Add Product</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="p-4">
                <div class="card-body">
                    <form method="post" asp-controller="Blendings" asp-action="AddBlendings" id="basicform" data-parsley-validate="" enctype="multipart/form-data">
                       <div class="row">
                        <div class="form-group col-md-6">
                            <label for="inputUserName" class="text-dark">Name**</label>
                            <input name="Name" type="text" data-parsley-trigger="change" required=""  autocomplete="off" class="form-control"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputUserName" class="text-dark">Model</label>
                            <input name="Model" type="text" data-parsley-trigger="change" required=""  autocomplete="off" class="form-control"/>
                        </div>
                        </div>
                        <div class="row">
                        <div class="form-group col-md-6">
                            <label for="inputUserName" class="text-dark">Capacity</label>
                            <input name="Capacity" type="number" data-parsley-trigger="change" required="" autocomplete="off" class="form-control"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputUserName" class="text-dark">Type Of Blending</label>
                            <input name="TypeOfBlending" type="text" data-parsley-trigger="change" required=""  autocomplete="off" class="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                        <div class="form-group col-md-6">
                            <label for="inputUserName" class="text-dark">Mixing Speed</label>
                            <input name="MixingSpeed" type="number" data-parsley-trigger="change" required="" autocomplete="off" class="form-control"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputUserName" class="text-dark">Mixing Time</label>
                            <input name="MixingTime" type="number" data-parsley-trigger="change" required=""  autocomplete="off" class="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                        <div class="form-group col-md-6">
                            <label for="inputUserName" class="text-dark">Weight</label>
                            <input name="Weight" type="number" data-parsley-trigger="change" required=""  autocomplete="off" class="form-control"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputUserName" class="text-dark">Length</label>
                            <input name="length" type="number" data-parsley-trigger="change" required="" autocomplete="off" class="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                        <div class="form-group col-md-6">
                            <label class="text-dark">Width</label>
                            <input name="Width" type="text" data-parsley-trigger="change" required="" autocomplete="off" class="form-control"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputUserName" class="text-dark">Height</label>
                            <input name="Height" type="number" data-parsley-trigger="change" required="" autocomplete="off" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputUserName" class="text-dark">Height</label>
                            <input name="BlendingImage" type="file" data-parsley-trigger="change" required=""  autocomplete="off" class="form-control"/>
                        </div>
                        <div class="row">
                            <div>
                                <p class="text-right">
                                    <input type="submit" value="Add Product" class="btn btn-primary" readonly />
                                </p>
                            </div>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    function confirmDelete(blendingId) {
        if (confirm("Are you sure you want to delete this product?")) {
            window.location.href = '/Blendings/DeleteBlending?id=' + blendingId;
        }
    }
</script>