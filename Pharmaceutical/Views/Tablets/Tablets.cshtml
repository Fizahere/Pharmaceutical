@model List<Tablet>
@{
    ViewData["Title"] = "Tablets";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .offcanvas-end {
        width: 45rem !important;
    }
</style>

<div class="p-4">
<div class="d-flex justify-content-between">
<h1>Tablets</h1>
        <button class="btn btn-primary mb-4" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"><a class="text-light">+ Add Product</a></button>
</div>
@* table *@
<div class="row">
    <!-- ============================================================== -->
    <!-- data table multiselects  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Products</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example3" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                    <th>ModelNumber</th>
                                    <th>Dies</th>
                                    <th>MaxPressure</th>
                                    <th>MaxDiameter</th>
                                    <th>MaxDepthOfFill</th>
                                    <th>Image</th>
                                    <th>ProductionCapacity</th>
                                    <th>MachineSize</th>
                                    <th>Netweight</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                            <tr>
                                        <td>@item.TabletID</td>
                                        <td>@item.Name</td>
                                        <td>@item.ModelNumber</td>
                                        <td>@item.Dies</td>
                                        <td>@item.MaxPressure</td>
                                        <td>@item.MaxDiameter</td>
                                        <td>@item.MaxDepthOfFill</td>
                                        <td><img src="~/images/@item.TabletImage" height="100" width="100" alt="@item.Name"/></td>
                                        <td>@item.ProductionCapacity</td>
                                        <td>@item.MachineSize</td>
                                        <td>@item.Netweight</td>
                                        <td><button class="btn btn-primary"><a class="text-light" asp-route-id="@item.TabletID" asp-controller="Tablets" asp-action="EditTablet">Edit</a></button></td>
                                        <td> <button class="btn btn-danger" onclick="confirmDelete('@item.TabletID')">Delete</button></td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>

@* addTable
 *@
 <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
        <h5 id="offcanvasRightLabel">Add Product</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="p-4">
                        <div class="card-body">
                            <form method="post" asp-controller="Tablets" asp-action="AddTablets" enctype="multipart/form-data" id="basicform" data-parsley-validate="">
                               <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="inputUserName">Name</label>
                                    <input id="inputUserName" type="text" name="Name" data-parsley-trigger="change" required=""  autocomplete="off" class="form-control">
                                </div>
                        <div class="form-group col-md-6">
                        <label for="inputEmail">ModelNumber</label>
                        <input id="inputEmail" type="text" name="ModelNumber" data-parsley-trigger="change" required="" autocomplete="off" class="form-control">
                                </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                        <label for="inputPassword">Dies</label>
                        <input id="inputPassword" name="Dies" type="text"  required="" class="form-control">
                                </div>
                        <div class="form-group col-md-6">
                        <label for="inputRepeatPassword">MaxPressure</label>
                        <input id="inputRepeatPassword" name="MaxPressure" data-parsley-equalto="#inputPassword" type="text" required="" class="form-control">
                                </div>
            </div>
                                           <div class="row">
                        <div class="form-group col-md-6">
                        <label for="inputRepeatPassword">MaxDiameter</label>
                        <input id="inputRepeatPassword" name="MaxDiameter" data-parsley-equalto="#inputPassword" type="text" required="" class="form-control">
                    </div>
                        <div class="form-group col-md-6">
                        <label for="inputRepeatPassword">MaxDepthOfFill</label>
                        <input id="inputRepeatPassword" name="MaxDepthOfFill" data-parsley-equalto="#inputPassword" type="text" required=""  class="form-control">
                    </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                        <label for="inputRepeatPassword">ProductionCapacity</label>
                        <input id="inputRepeatPassword" name="ProductionCapacity" data-parsley-equalto="#inputPassword" type="text" required="" class="form-control">
                                </div>
                        <div class="form-group col-md-6">
                        <label for="inputRepeatPassword">MachineSize</label>
                        <input id="inputRepeatPassword" name="MachineSize" data-parsley-equalto="#inputPassword" type="text" required=""  class="form-control">
                                </div>
                                </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                        <label for="inputRepeatPassword">Netweight</label>
                        <input id="inputRepeatPassword" name="Netweight" data-parsley-equalto="#inputPassword" type="text" required=""  class="form-control">
                    </div>
                        <div class="form-group col-md-6">
                        <label for="inputRepeatPassword">TabletImage</label>
                        <input id="inputRepeatPassword" name="TabletImage" data-parsley-equalto="#inputPassword" type="file" required="" class="form-control">
                        </div>
                    </div>

                    <div class="row">
                                    <div>
                                        <p class="text-right">
<input value="Submit" type="submit" class="btn btn-primary" readonly/>                          
</p>
                                    </div>
                                </div>
                            </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function confirmDelete(tabletId) {
        if (confirm("Are you sure you want to delete this product?")) {
            window.location.href = '/Tablets/DeleteTablets?id=' + tabletId;
        }
    }
</script>