@model List<ProcessEquipment>
@{
    ViewData["Title"] = "ProcessEquipments";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .offcanvas-end {
        width: 45rem !important;
    }
</style>

<div class="p-4">
    <div class="d-flex justify-content-between">
        <h1>Process Equipments</h1>
        <button class="btn btn-primary mb-4" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"><a class="text-light">+ Add Product</a></button>
    </div>

    @* table *@
    <div class="row">
        <!-- ============================================================== -->
        <!-- data table multiselects  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Products</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Model</th>
                                    <th>MaterialOfConstruction</th>
                                    <th>Image</th>
                                    <th>length</th>
                                    <th>Weight</th>
                                    <th>Height</th>
                                    <th>Width</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model){
                                <tr>
                                    <td>@item.ProcessEquipmentID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Model</td>
                                        <td>@item.MaterialOfConstruction</td>
                                        <td><img src="~/images/@item.ProcessEquipmentImage" height="100" width="100" alt="@item.Name"/></td>
                                    <td>@item.length</td>
                                    <td>@item.Weight</td>
                                    <td>@item.Height</td>
                                    <td>@item.Width</td>
                                        <td><button class="btn btn-primary"><a class="text-light" asp-route-id="@item.ProcessEquipmentID" asp-controller="ProcessEquipments" asp-action="EditProcessEquip">Edit</a></button></td>
                                        <td> <button class="btn btn-danger" onclick="confirmDelete('@item.ProcessEquipmentID')">Delete</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* addTable
    *@
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header">
            <h5 id="offcanvasRightLabel">Add Product</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="p-4">
                <div class="card-body">
                    <form method="post" asp-controller="ProcessEquipments" asp-action="AddProcessEquipments" id="basicform" data-parsley-validate="" enctype="multipart/form-data">
                       <div class="row">
                        <div class="form-group col-md-6">
                            <label for="inputUserName">Name</label>
                            <input id="inputUserName" type="text" name="Name" data-parsley-trigger="change" required="" autocomplete="off" class="form-control">
                        </div>
                            <div class="form-group col-md-6">
                            <label for="inputEmail">Model</label>
                            <input id="inputEmail" type="text" name="Model" data-parsley-trigger="change" required=""  autocomplete="off" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                            <label for="inputRepeatPassword">MaterialOfConstruction</label>
                            <input id="inputRepeatPassword" name="MaterialOfConstruction" data-parsley-equalto="#inputPassword" type="text" required="" class="form-control">
                        </div>
                            <div class="form-group col-md-6">
                            <label for="inputRepeatPassword">length</label>
                            <input id="inputRepeatPassword" name="length" data-parsley-equalto="#inputPassword" type="text" required="" class="form-control">
                        </div>
                </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                            <label for="inputRepeatPassword">Weight</label>
                            <input id="inputRepeatPassword" name="Weight" data-parsley-equalto="#inputPassword" type="text" required="" class="form-control">
                        </div>
                            <div class="form-group col-md-6">
                            <label for="inputRepeatPassword">Width</label>
                            <input id="inputRepeatPassword" name="Width" data-parsley-equalto="#inputPassword" type="text" required="" class="form-control">
                </div>
            </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                            <label for="inputRepeatPassword">Height</label>
                            <input id="inputRepeatPassword" name="Height" data-parsley-equalto="#inputPassword" type="text" required=""  class="form-control">
                        </div>
                            <div class="form-group col-md-6">
                            <label for="inputPassword">ProcessEquipmentImage</label>
                            <input id="inputPassword" name="ProcessEquipmentImage" type="file" required="" class="form-control">
            </div>
        </div>
                        <div class="row">
                            <div>
                                <p class="text-right">
                                    <input type="submit" value="Submit" class="btn btn-primary" readonly />
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

            <script>
    function confirmDelete(processEquipId) {
        if (confirm("Are you sure you want to delete this product?")) {
            window.location.href = '/ProcessEquipments/DeleteProcessEquip?id=' + processEquipId;
        }
    }
</script>