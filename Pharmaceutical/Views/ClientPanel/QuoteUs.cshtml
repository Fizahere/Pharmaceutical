
@{
    ViewData["Title"] = "QuoteUs";
    Layout = "~/Views/Shared/clientPanel.cshtml";
}
@{
    var user = Context.Session.GetString("userId");
}
@model Quote


<!-- Contact -->
<div id="contact" class="form-1">
    <img class="decoration-star" src="~/images/decoration-star.svg" alt="alternative">
    <img class="decoration-star-2" src="~/images/decoration-star.svg" alt="alternative">
    <div class="container">
        @if (ViewBag.success == true)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Thankyou for your quote!</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <script>
                setTimeout(() => window.location.replace("Index"), 3000);
            </script>
        }
        <div class="row">
            <div class="col-lg-1">
               @*  <div class="image-container">
                    <img class="img-fluid" src="~/images/contact.png" alt="alternative">
                </div> <!-- end of image-container --> *@
            </div> <!-- end of col -->
            <div class="col-lg-10">
                <div class="text-container">
                    <h2 class="text-center">Quote Us</h2>

                    <!-- Contact Form -->
                    <form method="post" asp-controller="clientPanel" asp-action="QuoteUs">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="hidden" class="form-control-input" asp-for="UserId" value="@user" required>
                        <div class="form-group">
                            <input type="text" class="form-control-input" asp-for="FirstName"  placeholder="First Name" required>
                        </div>
                        <div class="form-group">
                                    <input type="text" class="form-control-input" asp-for="CompanyName" placeholder="Company Name" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control-input" asp-for="City" placeholder="City" required>
                        </div>
                        <div class="form-group">
                                    <input type="number" class="form-control-input" asp-for="PostalCode" placeholder="Postal Code" required>
                        </div>
                        <div class="form-group">
                                    <input type="text" class="form-control-input" asp-for="Address" placeholder="Address" required>
                        </div>
                        </div>
                        <div class="col-lg-6">
                                <div class="form-group">
                                    <input type="text" class="form-control-input"  asp-for="LastName" placeholder="Last Name" required>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control-input" asp-for="EmailAddress" placeholder="Email" required>
                                </div>
                        <div class="form-group">
                            <input type="text" class="form-control-input" asp-for="State" placeholder="State" required>
                        </div>
                                <div class="form-group">
                                    <input type="text" class="form-control-input" asp-for="Country"  placeholder="Country" required>
                                </div>
                        <div class="form-group">
                            <input type="number" class="form-control-input" asp-for="Phone" placeholder="Phone" required>
                        </div>
                        </div>
                        </div>
                        <div class="container">
                        <div class="form-group">
                            <textarea class="form-control-textarea" cols="10" rows="10" asp-for="Comments" placeholder="Comments" required></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control-submit-button">Submit</button>
                        </div>
                        </div>
                    </form>
                    <!-- end of contact form -->
                </div> <!-- end of text-container -->
            </div> <!-- end of col -->
            <div class="col-lg-1">
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of form-1 -->
<!-- end of contact -->
