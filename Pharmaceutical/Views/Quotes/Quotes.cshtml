@model List<Quote>
@{
    ViewData["Title"] = "Quotes";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="p-4">
    <div class="d-flex justify-content-between">
        <h1>Quotes</h1>
    </div>

    @* table *@
    <div class="row">
        <!-- ============================================================== -->
        <!-- data table multiselects  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>UserName</th>
                                    <th>EmailAddress</th>
                                    <th>Comments</th>
                                    <th>CompanyName</th>
                                    <th>Address</th>
                                    <th>PostalCode</th>
                                    <th>Phone</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model){
                                <tr>
                                        <td>@item.QuoteID</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.EmailAddress</td>
                                    <td>@item.Comments</td>
                                    <td>@item.CompanyName</td>
                                    <td>@item.Address</td>
                                    <td>@item.PostalCode</td>
                                    <td>@item.Phone</td>
                                        <td> <button class="btn btn-danger" onclick="confirmDelete('@item.QuoteID')">Delete</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script>
    function confirmDelete(quoteId) {
        if (confirm("Are you sure you want to delete this product?")) {
            window.location.href = '/Quotes/DeleteQuote?id=' + quoteId;
        }
    }
</script>


