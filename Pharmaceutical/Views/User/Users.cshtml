@model List<User>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="p-4">
    <div class="d-flex justify-content-between">
        <h1>Users</h1>
    </div>

    @* table *@
    <div class="row">
        <!-- ============================================================== -->
        <!-- data table multiselects  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>UserName</th>
                                    <th>EmailAddress</th>
                                    <th>Password</th>
                                    <th>Role</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserID</td>
                                        <td>@item.UserName</td>
                                        <td>@item.UserEmail</td>
                                        <td>@item.Password</td>
                                        <td>@item.Role</td>
                                        @* <td><button class="btn btn-danger"><a class="text-light" asp-route-id="@item.UserID" asp-controller="User" asp-action="DeleteUser">Delete</a></button></td> *@
                                        <td> <button class="btn btn-danger" onclick="confirmDelete('@item.UserID')">Delete</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script>
    function confirmDelete(userId) {
        if (confirm("Are you sure you want to delete this user?")) {
            window.location.href = '/User/DeleteUser?id=' + userId;
        } 
    }
</script>